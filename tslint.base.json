{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 90,
        "semi": false
      }
    ],

    "ordered-imports": true,
    "object-literal-sort-keys": false,
    "interface-over-type-literal": false,
    "array-type": false,
    "only-arrow-functions": false,
    "interface-name": false,
    "no-console": false
  },
  "linterOptions": {
    "exclude": [
      "**/out"
    ]
  }
}
