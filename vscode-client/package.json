{
  "name": "bash-ide-vscode",
  "displayName": "Bash IDE",
  "description": "A language server for Bash",
  "author": "Mads Hartmann",
  "license": "MIT",
  "version": "1.8.0",
  "publisher": "mads-hartmann",
  "repository": {
    "type": "git",
    "url": "https://github.com/bash-lsp/bash-language-server"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "icon": "assets/bash-logo.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "shell script",
    "bash script",
    "bash"
  ],
  "activationEvents": [
    "onLanguage:shellscript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Bash IDE configuration",
      "properties": {
        "bashIde.globPattern": {
          "type": "string",
          "default": "**/*@(.sh|.inc|.bash|.command)",
          "description": "Glob pattern for finding and parsing shell script files."
        },
        "bashIde.highlightParsingErrors": {
          "type": "boolean",
          "default": true,
          "description": "Controls if parsing errors will be highlighted as problems."
        },
        "bashIde.explainshellEndpoint": {
          "type": "string",
          "default": "",
          "description": "Configure explainshell server in order to get hover documentation on flags and options."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "rm -rf out && ../node_modules/.bin/tsc -p ./",
    "compile:watch": "../node_modules/.bin/tsc -w -p ./",
    "update-vscode": "vscode-install",
    "postinstall": "vscode-install"
  },
  "dependencies": {
    "bash-language-server": "1.11.1",
    "vscode-languageclient": "^5.2.1",
    "vscode-languageserver": "^5.2.1"
  },
  "devDependencies": {
    "vscode": "^1.1.34"
  }
}
